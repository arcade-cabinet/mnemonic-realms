{
  "name": "mnemonic-realms",
  "version": "1.0.0",
  "description": "RPG-JS procedural generator with deterministic seeded content generation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "RPG_TYPE=rpg next dev",
    "build": "RPG_TYPE=rpg next build",
    "start": "next start",
    "export": "RPG_TYPE=rpg next build && next export",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "example": "tsx lib/examples.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arcade-cabinet/mnemonic-realms.git"
  },
  "keywords": [
    "rpgjs",
    "procedural-generation",
    "game-development",
    "tiled",
    "seedrandom"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arcade-cabinet/mnemonic-realms/issues"
  },
  "homepage": "https://github.com/arcade-cabinet/mnemonic-realms#readme",
  "dependencies": {
    "@rpgjs/client": "4.3.0",
    "@rpgjs/common": "4.3.0",
    "@rpgjs/tiled": "4.3.0",
    "@tanstack/react-query": "^5.90.21",
    "@types/sql.js": "^1.4.9",
    "drizzle-orm": "^0.45.1",
    "ecsy": "^0.4.3",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "seedrandom": "^3.0.5",
    "sql.js": "^1.14.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@biomejs/biome": "~2.3.15",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/express": "^4.17.21",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/seedrandom": "^3.0.8",
    "autoprefixer": "^10.4.24",
    "drizzle-kit": "^0.31.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "yuka": "^0.7.8"
  }
}
