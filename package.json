{
  "name": "mnemonic-realms",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "RPG_TYPE=rpg rpgjs dev",
    "build": "RPG_TYPE=rpg rpgjs build",
    "start": "node dist/server/main.mjs",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "playwright test",
    "test:unit": "vitest run",
    "assemblage": "tsx gen/assemblage/cli.ts",
    "gen": "tsx gen/cli.ts",
    "gen:build": "tsx gen/cli.ts build",
    "gen:generate": "tsx gen/cli.ts generate",
    "gen:integrate": "tsx gen/cli.ts integrate",
    "gen:status": "tsx gen/cli.ts status",
    "gen:full": "tsx gen/cli.ts build all && tsx gen/cli.ts generate all && tsx gen/cli.ts integrate all",
    "audio:fetch-ambient": "tsx scripts/fetch-ambient-loops.ts",
    "audio:gen-bgm-placeholders": "tsx scripts/generate-placeholder-bgm.ts",
    "verify:sprites": "tsx scripts/verify-sprites.ts",
    "tileset:build": "tsx gen/scripts/upscale-tilesets.ts",
    "tileset:tsx": "tsx gen/scripts/generate-tsx.ts",
    "validate": "tsx scripts/validation/cli.ts",
    "validate:visual": "tsx scripts/validation/cli.ts visual",
    "validate:sprite": "tsx scripts/validation/cli.ts sprite",
    "validate:map": "tsx scripts/validation/cli.ts map",
    "validate:event": "tsx scripts/validation/cli.ts event",
    "validate:content": "tsx scripts/validation/cli.ts content",
    "validate:all": "tsx scripts/validation/cli.ts all",
    "validate:strict": "tsx scripts/validation/cli.ts all --strict",
    "build:web": "./scripts/build-web.sh",
    "build:ios": "./scripts/build-ios.sh",
    "build:android": "./scripts/build-android.sh",
    "cap:sync": "npx cap sync"
  },
  "dependencies": {
    "@capacitor-community/sqlite": "^8.0.0",
    "@capacitor/android": "^8.1.0",
    "@capacitor/app": "^8.0.1",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "@capacitor/device": "^8.0.1",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/ios": "^8.1.0",
    "@capacitor/network": "^8.0.1",
    "@rpgjs/client": "4.3.0",
    "@rpgjs/database": "^4.3.0",
    "@rpgjs/default-gui": "^4.3.0",
    "@rpgjs/gamepad": "^4.3.0",
    "@rpgjs/mobile-gui": "4.3.0",
    "@rpgjs/server": "4.3.0",
    "@rpgjs/standalone": "4.3.0",
    "@rpgjs/types": "4.0.5",
    "fast-xml-parser": "^5.3.6",
    "socket.io-client": "4.7.4",
    "sql.js": "^1.14.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@biomejs/biome": "~2.3.15",
    "@google/genai": "^1.41.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@playwright/test": "^1.58.2",
    "@rpgjs/compiler": "4.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/sharp": "^0.32.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.3.1",
    "fake-indexeddb": "^6.2.5",
    "fast-check": "^4.5.3",
    "jsdom": "^28.1.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "sharp": "^0.34.5",
    "sqlite-vec": "0.1.7-alpha.2",
    "tmx-parser": "^1.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "protobufjs",
      "sharp",
      "better-sqlite3"
    ],
    "overrides": {
      "@babel/parser": "7.26.10",
      "@babel/core": "7.26.10",
      "@babel/generator": "7.26.10",
      "@babel/traverse": "7.26.10",
      "@babel/types": "7.26.10"
    },
    "patchedDependencies": {
      "@rpgjs/compiler": "patches/@rpgjs__compiler.patch"
    }
  }
}