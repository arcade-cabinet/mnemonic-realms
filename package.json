{
  "name": "mnemonic-realms",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web",
    "postinstall": "mkdir -p public && cp $(node -p \"require.resolve('canvaskit-wasm/bin/full/canvaskit.wasm', { paths: [require.resolve('@shopify/react-native-skia')] })\") public/canvaskit.wasm",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "playwright test",
    "test:unit": "vitest run",
    "assemblage": "tsx gen/assemblage/cli.ts",
    "gen": "tsx gen/cli.ts",
    "gen:build": "tsx gen/cli.ts build",
    "gen:generate": "tsx gen/cli.ts generate",
    "gen:integrate": "tsx gen/cli.ts integrate",
    "gen:status": "tsx gen/cli.ts status",
    "gen:full": "tsx gen/cli.ts build all && tsx gen/cli.ts generate all && tsx gen/cli.ts integrate all",
    "audio:fetch-ambient": "tsx scripts/fetch-ambient-loops.ts",
    "audio:gen-bgm-placeholders": "tsx scripts/generate-placeholder-bgm.ts",
    "verify:sprites": "tsx scripts/verify-sprites.ts",
    "tileset:build": "tsx gen/scripts/upscale-tilesets.ts",
    "tileset:tsx": "tsx gen/scripts/generate-tsx.ts",
    "validate": "tsx scripts/validation/cli.ts",
    "validate:visual": "tsx scripts/validation/cli.ts visual",
    "validate:sprite": "tsx scripts/validation/cli.ts sprite",
    "validate:map": "tsx scripts/validation/cli.ts map",
    "validate:event": "tsx scripts/validation/cli.ts event",
    "validate:content": "tsx scripts/validation/cli.ts content",
    "validate:all": "tsx scripts/validation/cli.ts all",
    "validate:strict": "tsx scripts/validation/cli.ts all --strict"
  },
  "dependencies": {
    "@shopify/react-native-skia": "^2.4.21",
    "@types/react": "~19.1.17",
    "expo": "^54.0.33",
    "expo-linking": "^8.0.11",
    "expo-router": "^6.0.23",
    "fast-xml-parser": "^5.3.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-native": "^0.81.6",
    "react-native-reanimated": "^4.2.2",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.23.0",
    "react-native-web": "^0.21.2",
    "react-native-worklets": "^0.7.4",
    "sql.js": "^1.14.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@biomejs/biome": "~2.3.15",
    "@google/genai": "^1.41.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@playwright/test": "^1.58.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/sharp": "^0.32.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.3.1",
    "fake-indexeddb": "^6.2.5",
    "fast-check": "^4.5.3",
    "jsdom": "^28.1.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "sharp": "^0.34.5",
    "sqlite-vec": "0.1.7-alpha.2",
    "tmx-parser": "^1.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "protobufjs",
      "sharp",
      "better-sqlite3"
    ],
    "overrides": {
      "@babel/parser": "7.26.10",
      "@babel/core": "7.26.10",
      "@babel/generator": "7.26.10",
      "@babel/traverse": "7.26.10",
      "@babel/types": "7.26.10"
    }
  }
}